# System directories.
export XDG_CONFIG_HOME="$HOME/.config"

# Application directories.
export CLAUDE_CONFIG_DIR="$XDG_CONFIG_HOME/claude"
export NVM_DIR="$XDG_CONFIG_HOME/nvm"
export OBSIDIAN_VAULT_DIR="$HOME/Library/Mobile Documents/iCloud~md~obsidian/Documents"

# User directories.
export DEV_DIR="$HOME/code"
export DOTFILES_PATH="$(chezmoi source-path 2>/dev/null || echo \"$DEV_DIR/nickcorin/dotfiles\")"
export GOPATH="$DEV_DIR/go"
export GOBIN="$GOPATH/bin"

# System variables.
export EDITOR="nvim"
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export PROFILE="$XDG_CONFIG_HOME/zsh/.zshrc"
export SSH_AUTH_SOCK="$HOME/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"


# Configure the PATH.
#
# We prepend directories to PATH if they exist and are not already in the PATH.
# `typeset -U` ensures that the array contains only unique values.
typeset -U path
path=(
    "$HOME/.cargo/bin"
    "$HOME/.lmstudio/bin"
    "$HOME/.local/bin"
    "$HOME/.bun/bin"
    "$GOBIN"
    /usr/local/opt/llvm/bin
    $path
)
export PATH
