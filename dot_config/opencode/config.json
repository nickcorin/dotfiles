{
    "$schema": "https://opencode.ai/config.json",
    "agent": {
        "build": {
            "permission": {
                "bash": "allow",
                "edit": "allow",
                "external_directory": "ask",
                "doom_loop": "ask",
                "webfetch": "allow"
            }
        },
        "learn": {
            "description": "Expert researcher in Computer Science",
            "mode": "primary",
            "permission": {
                "bash": "allow",
                "edit": "deny",
                "doom_loop": "ask",
                "external_directory": "ask",
                "glob": "deny",
                "grep": "deny",
                "list": "deny",
                "read": "deny",
                "webfetch": "allow",
                "write": "deny"
            },
            "prompt": "{file:./agent/learn.md}"
        }
    },
    "autoupdate": true,
    "formatter": {
        "gofumpt": {
            "command": [
                "gofumpt",
                "-extra",
                "-l",
                "-w"
            ],
            "extensions": [
                ".go"
            ]
        },
        "goimports": {
            "command": [
                "goimports",
                "-w"
            ],
            "extensions": [
                ".go"
            ]
        },
        "rustfmt": {
            "command": [
                "rustfmt"
            ],
            "extensions": [
                ".rs"
            ]
        }
    },
    "mcp": {
        "docs-langchain": {
            "enabled": true,
            "type": "remote",
            "url": "https://docs.langchain.com/mcp"
        },
        "just-mcp": {
            "type": "local",
            "command": [
                "just-mcp",
                "--stdio"
            ],
            "enabled": true
        },
        "playwright": {
            "type": "local",
            "command": [
                "pnpm",
                "dlx",
                "@playwright/mcp@latest"
            ],
            "enabled": true
        },
        "pencil": {
            "command": [
                "/Applications/Pencil.app/Contents/Resources/app.asar.unpacked/out/mcp-server-darwin-arm64",
                "--ws-port",
                "63995"
            ],
            "enabled": true,
            "type": "local"
        }
    },
    "mode": {
        "build": {
            "model": "openai/gpt-5.2-codex"
        },
        "learn": {
            "model": "openai/gpt-5.2"
        },
        "plan": {
            "model": "openai/gpt-5.2"
        }
    },
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "qwen3-coder": {
                    "name": "Qwen3 Coder"
                }
            }
        }
    },
    "share": "manual",
    "theme": "rosepine",
    "tui": {
        "scroll_acceleration": {
            "enabled": true
        }
    }
}
