{
    "$schema": "https://opencode.ai/config.json",
    "autoupdate": true,
    "formatter": {
        "gofumpt": {
            "command": [
                "gofumpt",
                "-extra",
                "-l",
                "-w"
            ],
            "extensions": [
                ".go"
            ]
        },
        "goimports": {
            "command": [
                "goimports",
                "-w"
            ],
            "extensions": [
                ".go"
            ]
        }
    },
    "mcp": {
        "docker": {
            "type": "local",
            "command": [
                "docker",
                "mcp",
                "gateway",
                "run"
            ],
            "enabled": true
        },
        "docs-langchain": {
            "enabled": true,
            "type": "remote",
            "url": "https://docs.langchain.com/mcp"
        },
        "playwright": {
            "type": "local",
            "command": [
                "pnpm",
                "dlx",
                "@playwright/mcp@latest"
            ],
            "enabled": true
        }
    },
    "mode": {
        "build": {
            "model": "opencode/grok-code"
        },
        "plan": {
            "model": "opencode/grok-code"
        }
    },
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama (local)",
            "options": {
                "baseURL": "http://localhost:11434/v1"
            },
            "models": {
                "qwen3-coder": {
                    "name": "Qwen3 Coder"
                }
            }
        }
    },
    "share": "manual",
    "theme": "gruvbox-material-dark-hard"
}
