{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

# Count packages to install
BREW_COUNT={{ len .brews }}
CASK_COUNT={{ len .casks }}
TOTAL_COUNT=$((BREW_COUNT + CASK_COUNT))

# Generate Brewfile content
BREWFILE_CONTENT="$(cat <<EOF
{{ range .taps -}}
tap {{ . | quote }}
{{ end -}}
{{ range .brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
)"

# Call generic installer
exec "{{ .chezmoi.sourceDir }}/.chezmoiscripts/install-packages.sh" "homebrew" "$TOTAL_COUNT" "$BREWFILE_CONTENT"
{{ end -}}